{
  "name": "nexapay-wallet",
  "version": "1.0.0",
  "description": "NexaPay Wallet is a mobile lending app that has wallet functionality. It is used by borrowers who need a wallet to receive the loans they have been granted and also send the money for repayments.",
  "main": "index.js",
  "engineStrict": true,
  "engines": {
    "node": "18.17.1",
    "npm": "9.6.7"
  },
  "scripts": {
    "start": "ts-node-dev --files --respawn ./src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate-swagger": "node ./swagger.js",
    "lint": "eslint --ext .ts,.js src/**",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.+(ts|js)\"",
    "check-types": "tsc --noEmit",
    "migrate:dev": "knex migrate:latest --env=development",
    "migrate:test": "knex migrate:latest --env=test",
    "migrate:undo": "knex migrate:rollback",
    "make:migration": "knex migrate:make",
    "seed": "knex seed:run --env=test"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Osaroigb/nexapay-wallet.git"
  },
  "author": "Osaro Igbinovia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Osaroigb/nexapay-wallet/issues"
  },
  "homepage": "https://github.com/Osaroigb/nexapay-wallet#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "convict": "^6.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "objection": "^3.1.1",
    "safe-json-stringify": "^1.2.0",
    "stoppable": "^1.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.8.1",
    "upath": "^2.0.1",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/convict": "^6.1.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.3.1",
    "@types/safe-json-stringify": "^1.1.2",
    "@types/stoppable": "^1.1.1",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "jest": "^29.6.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.6.2"
  }
}
